<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <!-- <th>User</th> -->
      <th>Country</th>
      <th>State</th>
      <th>Area</th>
      <th>Landmark</th>
      <th>Pincode</th>
      <th>Time from</th>
      <th>Time to</th>
      <th>Days</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.category.name %></td>
      <!--   <td><%= shop.user_id %></td> -->
        <td><%= shop.country.name %></td>
        <td><%= shop.state %></td>
        <td><%= shop.area %></td>
        <td><%= shop.landmark %></td>
        <td><%= shop.pincode %></td>
        <td><%= shop.time_from %></td>
        <td><%= shop.time_to %></td>
        <td><%= shop.days %></td>
        <td><%= shop.status %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

