<%= form_for(@shop) do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :categoty_id %><br>
    <%= collection_select(:shop, :category_id, @categories, :id, :name,{:include_blank => 'Please Select'}) %>
  </div>
    <%= f.hidden_field :user_id, :value => 1 %>
   <div class="field">
    <%= f.label :country %><br>
   <%= collection_select(:shop, :country_id, @countries, :id, :name,{:include_blank => 'Please Select'}) %>
  </div>
   <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :area %><br>
    <%= f.text_field :area %>
  </div>
  <div class="field">
    <%= f.label :landmark %><br>
    <%= f.text_field :landmark %>
  </div>
   <div class="field">
    <%= f.label :pincode %><br>
    <%= f.text_field :pincode %>
  </div>
  <div class="field">
    <%= f.label :time_from %><br>
    <%= f.time_select :time_from %>
  </div>
  <div class="field">
    <%= f.label :time_to %><br>
    <%= f.time_select :time_to %>
  </div>
  <div class="field">
    <%= f.label :days %><br> 
     <%= f.select :days, options_for_select(["MON", "TUE", "WED","THU","FRI","SAT",'SUN']), {}, {:multiple => true, :style => "width:150px;" } %>
  </div>

   <div class="field">
    <%= f.label :status %><br> 
     <%= f.select :status, options_for_select([["Open",1], ["Close",2]]), {}, {:style => "width:150px;" } %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
